# Fixing some nonsense with function returning
IFS=

cd "$(dirname $0)/../"

# Split our arguements into seperate sections
_command=()
for ((i=1; i<=$#; i++)); do
    if [[ "${!i}" == -* ]]; then
        case ${!i} in
            --help | -h)
                _return_help
                exit
                ;;
            --config-only)
                ;;
            --stdout)
                stdout="/dev/stdout"
                ;;
        esac
    else
        _command+=("${!i}")
    fi
done


